<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_collection_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.askseoulites.seoulcityapp.activities.CollectionDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="60dp"
        android:layout_margin="@dimen/text_margin"
        android:id="@+id/cDetailContents"
        android:text="@string/large_text" />

<!--        <com.parse.ParseImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:id="@+id/collectionPhoto"/>-->

    <ProgressBar
        android:id="@+id/progressCDetail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:visibility="gone"/>


    </FrameLayout>

</android.support.v4.widget.NestedScrollView>
